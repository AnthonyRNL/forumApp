<html>
  <head>
    <link rel='stylesheet' type='text/css' href='/foundation.css'>
    <link href='http://fonts.googleapis.com/css?family=Quicksand' rel='stylesheet' type='text/css'>
    <link rel='stylesheet' type='text/css' href='/style.css'>
  </head>
  <body>
    <%-include nav.ejs%>
    <h3>Hello, <%=user%></h3>
    <ul class='inline-list'>
      <li><h2><%=rows.insult%></h2></li>
      <li><h5><%=rows.tVotes%>&deg burn</h5></li>
      <li><div class='button-group'>
        <form action="/thread/post/up/<%=rows.thread_id%>?_method=PUT" method='POST'>
          <button class='tiny button primary radius'>+ &deg</button>
        </form>
        <form action="/thread/post/down/<%=rows.thread_id%>?_method=PUT" method='POST'>
          <button class='tiny button success radius'>- &deg</button>
        </form>
      </div></li>
    </ul>
  </br>
    <div class='rows'>
      <div class='small-3 large-2 columns text-right'>Backstory</div>
      <div class='small-1 large-1 columns text-left'><span>||</span></div>
      <div class='small-4 large-6 columns text-left end'>
        <div  id='story'>
          <%=rows.story%>
        </div>
      </div>
    </div>
  </br></br>
    <div class='rows'>
      <div class='large-10 columns'>
        <%comments.forEach(function(x){%>
          <p>
          <div class='row'>
          <ul class='inline-list'>
            <li>
              <div class='button-group'>
                <form action="/thread/comment/up/<%=rows.thread_id%>/<%=x.comment_id%>?_method=PUT" method='POST'>
                  <button class='tiny button primary radius'>+ &deg</button>
                </form>
                <%=x.cVotes%>
                <form action="/thread/comment/down/<%=rows.thread_id%>/<%=x.comment_id%>?_method=PUT" method='POST'>
                  <button class='tiny button success radius'>- &deg</button>
                </form>
              </div>
            </li>
            <li><h5><%=x.comeback%></h5></li>
          </ul>
            <div class='large-10 columns'>
              <%=x.cUsername%> <a href='/thread/post/<%=x.thread_id%>/<%=x.comment_id%>'><%=x.id%>edit/delete</a>
            </div>
          </div>
          <p></p>
        <%})%>
      </div>
      <div class='large-2 small-5 columns'>
        <ul class='inline-list'>
          <li><form action='/thread/post/<%=rows.thread_id%>/add' method='GET'>
            <button class='small button radius' >Add New Comment</button>
          </form></li>

          <li><form action="/thread/delete/<%=rows.thread_id%>?_method=DELETE" method='POST'>
            <button class='small button radius'>Delete Thread</button>
          </form></li>
          <li><form action="/index" method='GET'>
            <button class='small button radius'>All threads</button>
          </form></li>
        </ul>
      </div>
    <div>
  </body>
    <script type='text/javascript' src="/script.js"></script>
    <script src="/jquery.js"></script>
    <script src='/foundation.js'></script>
    <script src='/foundation.topbar.js'></script>
    <script>
      $(document).foundation();
    </script>

</html>
